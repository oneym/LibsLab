<?xml version="1.0" encoding="utf-8"?>
<com.oneym.demo.libslab.widget.ListItemDelete xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/alert_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_txt"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingLeft="30sp"
            android:text="12:12  星期五"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/list_toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/alert_toggle"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/bg_item_num_3_button"
            android:text="删除" />
    </LinearLayout>

</com.oneym.demo.libslab.widget.ListItemDelete>